{
  "name": "ts-composite-list-editor",
  "version": "1.0.0",
  "description": "Composite Pattern List Editor with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "compile-ts": "tsc",
    "compile-scss": "sass src/styles/main.scss dist/styles.css",
    "copy-html": "cp src/index.html dist/index.html",
    "build": "npm run compile-ts && npm run compile-scss && npm run copy-html",
    "start": "http-server dist",
    "watch": "nodemon -e ts,scss,html -x \"npm run build\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "http-server": "^14.1.1",
    "nodemon": "^3.1.0",
    "sass": "^1.71.1",
    "typescript": "^5.3.3"
  }
}
